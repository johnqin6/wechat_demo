.title {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 60rpx;
    text-align: center;
}

.header {
    overflow: hidden;
}
.header-input {
    float: left;
    width: 560rpx;
    padding-left: 20px;
}

.header-btn {
    float: left;
}

.todo-item {
    display: block;
    height: 100rpx;
    padding-left: 50rpx;
    line-height: 100rpx;
    font-size: 14px;
    overflow: hidden;
}

.todo-label {
    float: left;
    width: 400rpx;
}

.todo-check-box {
    float: left;
}

.item-btn {
    float: right;
    width: 300rpx;
    margin-top:10px;
}

.edit-input {
    display: inline-block;
    width: 300rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #f0f0f0;
    margin-top:20rpx;
}

.footer {
    padding-left: 60rpx;
}

