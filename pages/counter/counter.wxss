.counter {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: #ccc;
}

.counter-header {
    position: relative;
    height: 25%;
    text-align: right;
    font-size: 50px;
}

.result {
    position: absolute;
    right: 0;
    white-space: normal; 
    word-break: break-all;
}

.counter-body {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 400px;
    background-color: #fff;
    overflow: hidden;
}

.key {
    float: left;
    width: 25%;
    height: 80px;
    border: 1px solid #fff;
    box-sizing: border-box;
    text-align: center;
    line-height: 80px;
    background-color: #f78d1d;
    color: #fff;
}

.bule {
    background-color: #0fff;
}
.red {
    background-color: #f00;
}